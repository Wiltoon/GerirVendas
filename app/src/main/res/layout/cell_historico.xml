<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/nome_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:textColor="#000000"
        android:textStyle="normal"
        android:theme="@style/Base.Animation.AppCompat.Dialog"
        android:text="Marcelo Augusto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20/04 às 17:43"
        android:id="@+id/textData"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:layout_alignBottom="@+id/textDivida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="R$ 350,00"
        android:id="@+id/textPreço"
        android:layout_alignTop="@+id/nome_cliente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#85bb65" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="- R$ 60"
        android:id="@+id/textDivida"
        android:paddingLeft="10dp"
        android:layout_below="@+id/nome_cliente"
        android:layout_alignRight="@+id/textPreço"
        android:layout_alignEnd="@+id/textPreço"
        android:textColor="#b33a3a" />


</RelativeLayout>