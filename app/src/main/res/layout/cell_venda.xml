<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:textColor="#000000"
        android:textStyle="italic"
        android:theme="@style/Base.Animation.AppCompat.Dialog"
        android:text="Produto 1" />


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/contador"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/add_btn"
        android:layout_toStartOf="@+id/add_btn" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        android:id="@+id/add_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/delete_btn"
        android:src="@drawable/minus"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/contador"
        android:layout_toStartOf="@+id/contador"
        android:adjustViewBounds="false" />


</RelativeLayout>